{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true
  },
  "exclude":[
    "./node_modules",
  ],
  "include": [
    "src/**/*"
  ]
}
